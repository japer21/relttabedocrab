<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.mbds.codebarrebattler.PlayLocal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_layout"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/c1button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:padding="@dimen/spacing_layout"
            android:text="Attaquer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_layout"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imgCreature1Local"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" android:weightSum="2">

                <LinearLayout

                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/nomCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom:" />

                    <TextView
                        android:id="@+id/nbViesCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vies:" />

                    <TextView
                        android:id="@+id/attaqueCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attaque:" />

                    <TextView
                        android:id="@+id/defenseCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Defense:" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/setNomCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/setNbViesCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/setAttaqueCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/setDefenseCreat1Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_layout"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imgCreature2Local"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" android:weightSum="2">

                <LinearLayout
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/nomCreat2Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom:"/>

                    <TextView
                        android:id="@+id/nbViesCrea21Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vies:"/>

                    <TextView
                        android:id="@+id/attaqueCreat2Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attaque:"/>

                    <TextView
                        android:id="@+id/defenseCreat2Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Defense:"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/setNomCreat2Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/setNbViesCrea21Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/setAttaqueCreat2Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/setDefenseCreat2Local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/c2button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="@dimen/spacing_layout"
            android:text="Attaquer" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
