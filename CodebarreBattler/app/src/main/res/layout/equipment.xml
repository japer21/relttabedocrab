<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2" >
    <ImageView
        android:id="@+id/imageViewEquip"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="153dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textViewNomEquip"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Nom de l'equipement:" />

            <TextView
                android:id="@+id/textViewContribution"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Contribution:" />

            <TextView
                android:id="@+id/textViewBelongsTo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Belongs to:" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/textViewGetNomE"
                android:layout_width="134dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textViewGetContribE"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textViewGetBelongsTo"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
