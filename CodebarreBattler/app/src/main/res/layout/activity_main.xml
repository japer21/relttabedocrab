<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scan_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.mbds.codebarrebattler.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_layout"

        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnListCreat"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="@dimen/spacing_layout_vertical"
            android:src="@drawable/ic_listc_black_24dp" />

        <ImageButton
            android:id="@+id/buttonLocalJeu"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="@dimen/spacing_layout_vertical"
            android:src="@drawable/ic_game_controller_hand_drawn_tool" />

        <ImageButton
            android:id="@+id/buttonReseauJeu"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="@dimen/spacing_layout_vertical"
            android:src="@drawable/ic_multiplayer" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
